{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2017", "DOM"],
    "types": ["jest"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
